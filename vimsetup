curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

curl -Lo ~/.vimrc \
    https://raw.githubusercontent.com/dkan/dev_settings/master/vimrc

curl -Lo ~/.bash_profile \
    https://raw.githubusercontent.com/dkan/dev_settings/master/bash_profile

curl -Lo ~/.gitconfig \
    https://raw.githubusercontent.com/dkan/dev_settings/master/gitconfig

mkdir -p ~/.vim/{.undo,.backup,.swp}
vim +PlugUpdate +PlugClean +qall

// install home-brew
/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

// install vim
brew install vim --with-luajit

// install postgres
brew install postgres

// install fzf
brew install fzf

// install ripgrep
brew install ripgrep
